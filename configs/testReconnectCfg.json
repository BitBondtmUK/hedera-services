{
  "name": "reconnect",
  "description": "platform testing demo - reconnect",
  "duration": 250,
  "settings": [
    {
      "name": "throttle7extra",
      "value": "0.02"
    },
    {
      "name": "throttle7",
      "value": "1"
    },
    {
      "name": "throttle7threshold",
      "value": "1.5"
    },
    {
      "name": "showInternalStats",
      "value": "1"
    },
    {
      "name": "csvFileName",
      "value": "PlatformTesting"
    },
    {
      "name": "csvAppend",
      "value": "true"
    },
    {
      "name": "reconnectActive",
      "value": "1"
    }
