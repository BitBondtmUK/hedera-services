  "experimentConfig": {
    "experimentRestartDelay": "5",
    "experimentStartDelay": "2",
    "freezeWaitMillis": "30000"
  },
  "app": {
    "jar": "PlatformTestingApp.jar",
    "parameterList": [
      "FCMReconnect.json"
    ]
  },
  "resultFiles": [
    "swirlds.log"
  ],
  "validator": [
    "STATS",
    "RECONNECT"
